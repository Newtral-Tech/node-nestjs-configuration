{
  "name": "@newtral/nestjs-configuration",
  "version": "0.0.0-development",
  "description": "Dynamic configuration module for NestJS",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Lorens Leon <lorens.leon@newtral.es>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Newtral-Tech/node-nestjs-configuration.git"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.7",
    "ajv": "^7.0.3",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@nestjs/common": "^7.6.8",
    "@nestjs/core": "^7.6.8",
    "@nestjs/testing": "^7.6.8",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/faker": "^5.1.6",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "semantic-release": "^17.3.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.6.8"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "concurrently 'yarn:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry.js 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc yarn test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "yarn lint --fix",
    "health": "yarn && yarn clean && yarn lint && yarn build --noEmit && yarn test --reporter dot",
    "ci": "yarn && yarn lint && yarn build --noEmit && yarn test",
    "prepublishOnly": "yarn build",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  }
}
