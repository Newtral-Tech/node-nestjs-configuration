{
  "name": "@newtral/nestjs-configuration",
  "version": "4.2.0",
  "description": "Dynamic configuration module for NestJS",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Lorens Leon <lorens.leon@newtral.es>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Newtral-Tech/node-nestjs-configuration.git"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/faker": "^6.6.8",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "faker": "^5.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "rxjs": "^7.8.1",
    "semantic-release": "^22.0.12",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.2.5"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "concurrently 'npm:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry.js 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc npm test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "health": "npm install && npm run clean && npm run lint && npm run build:commonjs -- --noEmit && npm test -- --reporter dot",
    "ci": "npm ci && npm run lint && npm run build --noEmit && npm test",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
